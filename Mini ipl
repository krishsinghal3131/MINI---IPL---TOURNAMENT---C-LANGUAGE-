void PlayerStats(struct stats n){
    printf("\n----------PLAYER STATS----------\n");
    printf("Name                 : %s\n", n.name);
    printf("Matches              : %d\n", n.matches);
    printf("Runs                 : %d\n", n.runs);
    printf("Fifties              : %d\n", n.fifties);
    printf("Centuries            : %d\n", n.centuries);
    printf("Average              : %.2f\n", n.avg);
    printf("Highest Score        : %d\n", n.highest);
    printf("Wickets              : %d\n", n.wickets);
    printf("Economy              : %.2f\n", n.economy);
    printf("Best Bowling Figures : %s\n", n.bestbowl);
} 


 int main(){
    printf("Select any 4 different teams out of these 6 teams:-\n\n");
    printf("1. RCB\n");
    printf("2. CSK\n");
    printf("3. MI\n");
    printf("4. KKR\n");
    printf("5. SRH\n");
    printf("6. RR\n");
    
    char *teams[]={"", "RCB", "CSK", "MI", "KKR", "SRH", "RR"};
    char *stadium[]={"", "M.Chinnaswamy Stadium (RCB)" , "M.A.Chidambaram Stadium (CSK)" , "Wankhede Stadium (MI)" , "Eden Gardens (KKR)" , "Rajiv Gandhi Int. Stadium (SRH)" , "Sawai Mansigh Stadium (RR)"};
    char *pitch[]={"" , "Batting Friendly" , "Slow and Spin Friendly" , "Hard and Batting Friendly" , "Spin Fiendly" , "Batting Flat Track" , "Bouncy and Pace"};
    int front[]={0, 65 , 66 , 70 , 77 , 70 , 72};
    int square[]={0, 60 , 69 , 66 , 67 , 68 , 67};
    int avg[]={0, 185 , 160 , 175 , 165 , 180 , 155};
    int highest[]={0, 287 , 246 , 235 , 262 , 286 , 219};
    int seats[]={0, 40000 , 38200 , 33100 , 68000 , 39200 , 30000};
    int points[]={0, 0, 0, 0, 0, 0, 0};
    int mplayed[]={0, 0, 0, 0, 0, 0, 0};
    int mwon[]={0, 0, 0, 0, 0, 0, 0};
    int mlost[]={0, 0, 0, 0, 0, 0, 0};
    
    int i, j;
    int arr[4];
    for(i=0; i<4; i++){
        printf("\nEnter number of selected team %d: ", i+1);
        scanf("%d", &arr[i]);
        if(arr[i]<1||arr[i]>6){
        printf("\nInvalid Input: Please select from above listed teams only");
        return 0;
        }
    }
    for(i=0; i<4; i++){
        for(j=i+1; j<4; j++){
            if(arr[i]==arr[j]){
                printf("\n ******Please Select Different Teams******");
            return 0;
            }
        }
    }
    printf("\nSelected teams are:-\n\n");
    for(i=0; i<4; i++){
        printf("%d. %s\n", i+1, *(teams+arr[i]));
    }
    printf("\n\n");
    int match_number = 0;
    while(1) {
    printf("\n---------------MINI IPL---------------\n\n");
    int n;
    printf("1. Fixtures\n2. Squads and Stats\n3. Venues\n4. SIMULATE\n5. Points Table\n6. EXIT");
    printf("\n\nEnter the designation of what you want to see: ");
    scanf("%d", &n);
   
    switch(n){
        case 1:
        printf("\n---------------FIXTURES---------------\n\n");
        printf("Match 1: %s vs %s at %s\n", teams[arr[0]], teams[arr[1]], stadium[arr[1]]);
        printf("Match 2: %s vs %s at %s\n", teams[arr[2]], teams[arr[3]], stadium[arr[2]]);
        printf("Match 3: %s vs %s at %s\n", teams[arr[0]], teams[arr[2]], stadium[arr[0]]);
        printf("Match 4: %s vs %s at %s\n", teams[arr[1]], teams[arr[3]], stadium[arr[1]]);
        printf("Match 5: %s vs %s at %s\n", teams[arr[0]], teams[arr[3]], stadium[arr[3]]);
        printf("Match 6: %s vs %s at %s\n", teams[arr[1]], teams[arr[2]], stadium[arr[1]]);
        printf("Match 7: %s vs %s at %s\n", teams[arr[1]], teams[arr[0]], stadium[arr[0]]);
        printf("Match 8: %s vs %s at %s\n", teams[arr[3]], teams[arr[2]], stadium[arr[3]]);
        printf("Match 9: %s vs %s at %s\n", teams[arr[2]], teams[arr[0]], stadium[arr[2]]);
        printf("Match 10: %s vs %s at %s\n", teams[arr[3]], teams[arr[1]], stadium[arr[3]]);
        printf("Match 11: %s vs %s at %s\n", teams[arr[3]], teams[arr[0]], stadium[arr[0]]);
        printf("Match 12: %s vs %s at %s\n", teams[arr[2]], teams[arr[1]], stadium[arr[2]]);
        break;
        case 2:
        printf("\n---------------SQUAD AND STATS---------------\n\n");
        for(i=0; i<4; i++){
            printf("%d. %s\n", i+1, teams[arr[i]]);
        }
        int x;
        printf("\nEnter the team number to know its squad: ");
        scanf("%d" ,&x);
        printf("\n\n");
        
        Squads(arr[x-1]);
        
        int loop = 1;
        while(loop) {
        int num;
        printf("\nEnter the players number to know its stats: ");
        scanf("%d", &num);
        
        if(num < 1 || num > 18) {
            printf("Invalid Player Number");
     } else {
       int team = arr[x-1];

        switch(team) {
             case 1:
              PlayerStats(RCB[num-1]);
              break;

             case 2:
              PlayerStats(CSK[num-1]);
              break;

             case 3:
              PlayerStats(MI[num-1]);
              break;

             case 4:
              PlayerStats(KKR[num-1]);
              break;

             case 5:
              PlayerStats(SRH[num-1]);
              break;

             case 6:
              PlayerStats(RR[num-1]);
              break;
    }
    printf("\nDo you want to see stat of another player (1-Yes, 0-No): ");
    scanf("%d", &loop);
  }
}
        break;
        case 3:
        printf("\n---------------VENUES---------------\n\n");
        
        for(i=0; i<4; i++){
            int teamnumber = arr[i];
            printf("%d. %s\n", i+1, stadium[teamnumber]);
        }
        int p;
        printf("\nEnter the Stadium number to know about its STATS: ");
        scanf("%d", &p);
               printf("\n---------------STADIUM STATS---------------\n");
        int t = arr[p-1];  

        printf("\n");
        printf("---------------------------------------------------------\n");
        printf("| %-20s | %-30s |\n", "Field", "Stats");
        printf("---------------------------------------------------------\n");
        printf("| %-20s | %-30s |\n", "Stadium Name", stadium[t]);
        printf("| %-20s | %-30s |\n", "Pitch Condition", pitch[t]);
        printf("| %-20s | %-30d |\n", "Front Boundary", front[t]);
        printf("| %-20s | %-30d |\n", "Side Boundary", square[t]);
        printf("| %-20s | %-30d |\n", "Average T20 Score", avg[t]);
        printf("| %-20s | %-30d |\n", "Highest T20 Score", highest[t]);
        printf("| %-20s | %-30d |\n", "Seating Capacity", seats[t]);
        printf("---------------------------------------------------------------\n");
        break;
        case 4:
        int team1[]={arr[0], arr[2], arr[0], arr[1], arr[0], arr[1], arr[1], arr[3], arr[2], arr[3], arr[3], arr[2]};
    int team2[]={arr[1], arr[3], arr[2], arr[3], arr[3], arr[2], arr[0], arr[2], arr[0], arr[1], arr[0], arr[1]};
   
        if(match_number >= 12) {
        printf("\nAll matches have been simulated!\n");
        break;
    }

    while(1) {
        int t1 = team1[match_number];
        int t2 = team2[match_number];

        printf("\n------------------------------------------\n");
        printf("Match %d: %s vs %s\n", match_number + 1, teams[t1], teams[t2]);
        printf("------------------------------------------\n");

        int winner;
        printf("Enter the WINNER (1 for %s, 2 for %s): ", teams[t1], teams[t2]);
        scanf("%d", &winner);

        mplayed[t1]++, mplayed[t2]++;

        if(winner == 1) {
            points[t1] += 2;
            mwon[t1]++;
            mlost[t2]++;
        }
        else if(winner == 2) {
            points[t2] += 2;
            mwon[t2]++;
            mlost[t1]++;
        }
        else {
            printf("Invalid input! Try again.\n");
            continue; 
        }

        match_number++;
        
        int nxt;
        printf("Do you want to simulate the next match? (1 to 9-Yes, 0-No): ");
        scanf("%d", &nxt);

        if(nxt == 0)
         break;
         
         if(match_number>=12){
             printf("ALL MATCHES COMPLETED!!!!!!!\n\n");
             int winner_team = arr[0];
             int max_points = points[arr[0]];
             for(i=0; i<4; i++){
                 if(points[arr[i]]>max_points){
                     max_points = points[arr[i]];
                     winner_team = arr[i];
                 }
             }
         printf("üèÜüèÜüèÜWINNER OF MINI IPL IS TEAMüèÜüèÜüèÜ    üèÜüèÜüèÜ%süèÜüèÜüèÜ", teams[winner_team]);
         break;
        }
    
    }
         break;
         case 5:
         printf("\n---------------POINTS TABLE---------------\n");
         printf("TEAMS\tMATCHES PLAYED\t\tMATCHES WON\t\tMATCHES LOST\t POINTS\n");
         
         for(i=0; i<=4; i++){
             printf("%s\t\t\t\t%d\t\t\t\t%d\t\t\t\t%d\t\t\t\t%d\n\n", teams[arr[i]], mplayed[arr[i]], mwon[arr[i]], mlost[arr[i]], points[arr[i]]);
         }
         break;
        case 6:
        printf("Exiting the program........\n\n");
        printf("                             THANK YOU         ");
        return 0;
        default:
        return 0;
    }
    }
}


    
    
